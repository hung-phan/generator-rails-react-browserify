{
  "development": {
    "path": "./app/assets/sources/",
    "src": "./app/assets/sources/*-build.js",
    "build": "./app/assets/javascripts/build"
  },
  "production": {
    "src": "./app/assets/sources/*-build.js",
    "build": "./app/assets/javascripts/build"
  },
  "browserify": {
    "transform": {
      "literalify": {
        "jquery": "window.$",
        "lodash": "window._",
        "react": "window.React",
        "react-router": "window.ReactRouter",
        "superagent": "window.superagent"
      }
    }
  }
}
